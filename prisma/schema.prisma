generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id 
  email     String   @unique
  streak    Int      @default(0)
  createdAt DateTime @default(now())
  scores    Score[]
}

model Puzzle {
  id        String   @id @default(cuid())
  date      String   @unique 
  grid      Json     
  solution  Json     
  createdAt DateTime @default(now())
}

model Score {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      String   
  points    Int      
  timeTaken Int      
  difficulty String  
  synced    Boolean  @default(true) 
  createdAt DateTime @default(now())

  @@unique([userId, date])
}